    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minaj by login</title>
</head>
<body>
    <h2> Login</h2>

    <% if(locals.error) { %>
        <h4> error: <%= error %></h4>
   <% } %>
