<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minaj by urlshortner</title>
</head>
<body>
    <h1> Url Shortner</h1>
    <% if(locals.id) { %>
        <p> URL Generated: localhost:8010/url/route/<%= id %> </p>
    <% } %>

    <form method="post" action="/url">
        <label>Enter your url here</label>
        <input type="text" placeholder="www.example.com" name="url" />
        <button type="submit"> Generate </button>
    </form>

    <% if(locals.urls) {%>

        <table>
            <tr>
                <th>sr no</th>
                <th>shortId</th>
                <th>redirectUrl</th>
                <th>clicks</th>
            </tr>
            <% urls.forEach ( (url,index) => { %>

            <tr>
                <td><%= index + 1 %> </td>
                <td><%= url.shortId %> </td>
                <td><%= url.redirectUrl %> </td>
                <td><%= url.visitHistory.length %> </td>
            </tr>
            <% }) %>
        </table>

    <% }%>
    
</body>
</html>